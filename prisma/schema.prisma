generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id      String   @id @default(uuid())
  createdAt DateTime @default(now())
  title   String
  message String
  isDone Boolean @default(false)
  subTasks Subtask[]
}

model Subtask {
  id  String @id @default(uuid())
  taskId String 
  task Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  title String
  createdAt DateTime @default(now())
}